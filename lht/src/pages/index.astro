---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Home" image="/images/budding-plant-2.png">
  <div class="not-prose space-y-6">
    <section
      class="bg-[var(--color-light-tan)] px-3 py-12 text-center"
    >
      <h1 class="text-4xl font-semibold">
        Creating space for healing & restoration
      </h1>
      <p class="mt-2 text-[22px] italic">
        Psychotherapy for adults in Washington State
      </p>
    </section>
    <div class="w-full">
      <img
        src="/images/budding-plant-2.png"
        alt="Budding plant"
        class="h-auto w-full"
      />
    </div>
    <section
      class="mx-12 flex h-124 items-center justify-center"
    >
      <div
        class="z-1 flex h-[80%] w-[80%] flex-col items-center justify-center bg-[var(--color-light-tan)] p-6 text-center"
      >
        <h2 class="mt-0 text-2xl font-normal">
          Integrative psychotherapy for healing & learning new ways of living:
        </h2>
        <p class="mt-3 italic">
          Using relationship and therapeutic practices to help you turn towards
          what has been painful to be with, and to encounter your goodness.
        </p>
      </div>
      <div
        class="relative z-0 ml-[-50px] flex h-full w-[80%] justify-center hidden sm:flex"
      >
        <img
          src="/images/budding-plant.jpeg"
          alt="Budding plant"
          class="h-full w-full object-cover"
        />
      </div>
    </section>
  </div>
</BaseLayout>
